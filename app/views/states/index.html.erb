<h1>Listing States</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Abrev</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td><%= state.abrev %></td>
        <td><%= link_to 'Breweries', state_breweries_path(state.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


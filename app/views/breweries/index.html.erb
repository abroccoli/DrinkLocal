<!DOCTYPE html>
<html>
  <head>
    <title>DrinkLocal</title>
  </head>

  <body>
    <div id="main-container" class="container-fluid">
      <div class="row">
        <div id="sidebar" class="col-xs-3">
          <!-- sidebar content -->
          <h1>Listing Breweries</h1>
        </div>
        <div id="main-content" class="col-xs-9">
          <!--  main content -->
          <table class = "table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Url</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @breweries.each do |brewery| %>
                <tr>
                  <td><%= brewery.name %></td>
                  <td><%= brewery.location %></td>
                  <td><%= brewery.url %></td>
                  <td><%= link_to 'Show', brewery, class: 'btn btn-default btn-sm' %></td>
                  <td><%= link_to 'Edit', edit_brewery_path(params[:brewery_id]), class: 'btn btn-default btn-sm' %></td>
                  <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to new_state_brewery_path, class: 'btn btn-success' do%>
            <i class="glyphicon glyphicon-plus"></i> New Brewery
          <%end%>
       </div>
      </div>
    </div>
  </body>
</html>






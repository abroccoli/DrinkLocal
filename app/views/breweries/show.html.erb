<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row clearfix">
    <div class="col-md-4 column">
      <img alt="140x140" src="http://lorempixel.com/140/140/" />
    </div>
    <div class="col-md-8 column">
      <h1>
        <%= @brewery.name %>
      </h1>
    </div>
  </div>
  <div class="row clearfix">
    <div class="col-md-4 column">
      <strong>Location:</strong>
      <%= @brewery.location %>
    </div>
    <div class="col-md-4 column">
      <strong>Url:</strong>
      <%= @brewery.url %>
    </div>
    <div class="col-md-4 column">
      <strong>Hours:</strong>
      <%= @brewery.hours %>
      <br>
      <strong>Tours ?:</strong>
      <%= @brewery.tours_? %>
    </div>
  </div>
  <div class="row clearfix">
    <div class="col-md-12 column">
     <strong>About:</strong>
     <%= @brewery.about %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <h2 class="text-left">
        Reviews
      </h2>
    </div>
  </div>
  <div class="row clearfix">
  <% @brewery.reviews.each do |review| %>
      <div class="col-md-8 column">
        <strong>Title:</strong>
        <%= review.title %>
      </div>
      <div class="col-md-4 column">
        <strong>Rating:</strong>
        <%= "#{review.rating}/5" %>
      </div>
    </div>
    <div class="row clearfix">
      <div class="col-md-12 column">
        <strong>Review:</strong>
        <%= review.body %>
      </div>
    </div>
  <% end %>
  <div class="row clearfix">
    <div class="col-md-12 column">
      <h2 class="text-left">
      Add a review:
      </h2>
    </div>
  </div>
  <%= form_for([@brewery, @brewery.reviews.build],html: {class: 'form-group'}) do |f| %>
  <div class="row clearfix">
    <div class="col-md-12 column">
      <div class="field form-group">
        <%= f.label :title, class: 'col-sm-2 control-label' %><br>
      <div class="col-sm-10">
        <%= f.text_field :title %>
      </div>
      <div class="field form-group">
        <%= f.label :body, class: 'col-sm-2 control-label' %><br>
      <div class="col-sm-10">
        <%= f.text_field :body %>
      </div>
      <div class="field form-group">
        <%= f.label :rating, class: 'col-sm-2 control-label' %><br>
      <div class="col-sm-10">
        <%= f.text_field :rating %>
      </div>
      <div class="actions form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit %>
        </div>
      </div>

      </div>
    </div>
  </div>
  <% end %>

  <%= link_to breweries_path, class: 'btn btn-danger' do %>
    <i class="glyphicon glyphicon-arrow-left"></i> Back
  <% end %>

</div>


